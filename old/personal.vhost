<VirtualHost *:80>
	ServerName www.akmiller.co.uk
	ServerName akmiller.co.uk
	ServerName personal

	WSGIDaemonProcess personal user=www-data group=www-data threads=5
	WSGIScriptAlias / /home/andrew/personal-site/personal.wsgi

	<Directory /home/andrew/personal-site/>
		WSGIProcessGroup personal
		WSGIApplicationGroup %{GLOBAL}
		Order deny,allow
		Allow from all
	</Directory>
</VirtualHost>
